def maybe(conn, params) do
  # Use Maybe monad to handle optional parameters
  selected_language = 
    params
    |> Map.get("lang", "elixir")
    |> Maybe.return()                  # Wrap in Maybe monad
    |> Maybe.map(&amp;String.downcase/1)   # Transform safely
    |> Maybe.filter(fn lang ->         # Validate
         lang in ["elixir", "haskell", "rust", "ocaml", "golang"]
       end)
    |> Maybe.from_maybe("elixir")      # Extract with default
  
  render(conn, :maybe, selected_language: selected_language)
end</pre>
